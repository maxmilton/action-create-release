{
  "name": "@maxmilton/action-create-release",
  "version": "0.0.8",
  "description": "GitHub action to create a new GitHub release in your CI workflow",
  "repository": "maxmilton/action-create-release",
  "author": "Max Milton <max@happycode.ltd>",
  "license": "MIT",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "pnpm run prebuild && node build.mjs",
    "lint": "pnpm run lint:js && pnpm run lint:ts",
    "lint:js": "eslint --ignore-path .gitignore --ext .cjs,.js,.mjs,.ts .",
    "lint:ts": "tsc --project test --noEmit",
    "prebuild": "rm -rf dist; mkdir dist",
    "test": "c8 --all --include=src --reporter=text --reporter=lcovonly uvu -r esbuild-register test '\\.test\\.ts$'"
  },
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/github": "5.0.0"
  },
  "devDependencies": {
    "@types/node": "16.11.0",
    "@typescript-eslint/eslint-plugin": "5.1.0",
    "@typescript-eslint/parser": "5.1.0",
    "c8": "7.10.0",
    "esbuild": "0.13.7",
    "esbuild-register": "3.0.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "14.0.0",
    "eslint-plugin-import": "2.25.2",
    "eslint-plugin-unicorn": "37.0.1",
    "prettier": "2.4.1",
    "prettier-plugin-pkg": "0.10.0",
    "prettier-plugin-sh": "0.7.1",
    "typescript": "4.4.4",
    "uvu": "0.5.2"
  },
  "prettier": {
    "arrowParens": "always",
    "endOfLine": "lf",
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "./node_modules/prettier-plugin-pkg",
      "./node_modules/prettier-plugin-sh"
    ]
  }
}
